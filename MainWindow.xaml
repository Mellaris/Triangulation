<Window x:Class="TriangulationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriangulationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Верхнее меню -->
        <Menu VerticalAlignment="Top" Height="30" Background="LightGray">
            <MenuItem Header="Координаты и радиусы">
                <MenuItem Header="Вышка 1: Координаты: (0, 0), Радиус: 100" Name="Tower1Menu" />
                <MenuItem Header="Вышка 2: Координаты: (0, 0), Радиус: 100" Name="Tower2Menu" />
                <MenuItem Header="Вышка 3: Координаты: (0, 0), Радиус: 100" Name="Tower3Menu" />
                <MenuItem Header="Координаты объекта: невозможно рассчитать" Name="CoordinatesMenu" />
            </MenuItem>
        </Menu>

        <!-- Карта -->
        <Canvas Name="MapCanvas" Background="White" Margin="0,30,0,0">
            <!-- Радиусы вышек -->
            <Ellipse Name="Radius1" Width="200" Height="200" Fill="LightGreen" Opacity="0.3" />
            <Ellipse Name="Radius2" Width="200" Height="200" Fill="LightBlue" Opacity="0.3" />
            <Ellipse Name="Radius3" Width="200" Height="200" Fill="Pink" Opacity="0.3" />

            <!-- Вышки -->
            <Ellipse Name="Tower1" Width="20" Height="20" Fill="Black" />
            <Ellipse Name="Tower2" Width="20" Height="20" Fill="Black" />
            <Ellipse Name="Tower3" Width="20" Height="20" Fill="Black" />

            <!-- Красная точка -->
            <Ellipse Name="ObjectPoint" Width="15" Height="15" Fill="Red" />
        </Canvas>
    </Grid>
</Window>
