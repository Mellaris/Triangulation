<Window x:Class="TriangulationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriangulationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" >
    <Grid>
        <!-- Основное пространство для отображения -->
        <Canvas Name="MainCanvas" Background="White" ClipToBounds="True">
            <!-- Красная точка -->
            <Ellipse Name="ObjectPoint" Width="15" Height="15" Fill="Red" Canvas.Left="300" Canvas.Top="300" />
        </Canvas>

        <!-- Панель управления -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="100">
            <Button Name="AddTowerButton" Content="Добавить вышку" Width="150" Margin="10" Click="AddTowerButton_Click" />
        </StackPanel>

        <!-- Меню для вывода координат -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Информация">
                <MenuItem Name="CoordinatesMenu" Header="Координаты объекта: Не определены" />
            </MenuItem>
        </Menu>
    </Grid>
</Window>
