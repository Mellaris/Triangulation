<Window x:Class="TriangulationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriangulationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" >
    <Grid>
        <!-- Поле для отображения объектов -->
        <Canvas Name="MainCanvas" Background="White" Margin="10" MouseMove="Canvas_MouseMove" MouseLeftButtonUp="Canvas_MouseLeftButtonUp">
            <!-- Красная точка -->
            <Ellipse Name="RedPoint" Width="15" Height="15" Fill="Red" Canvas.Left="200" Canvas.Top="200"
                  MouseLeftButtonDown="RedPoint_MouseLeftButtonDown"/>
        </Canvas>

        <!-- Панель управления -->
        <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" Background="LightGray" Height="150">
            <Button Name="AddStationButton" Content="Добавить станцию" Width="150" Margin="10"/>
            <TextBlock Name="SignalStrength1" Text="Станция 1: 0%" Margin="10"/>
            <TextBlock Name="SignalStrength2" Text="Станция 2: 0%" Margin="10"/>
            <TextBlock Name="SignalStrength3" Text="Станция 3: 0%" Margin="10"/>
            <TextBlock Name="CoordinatesDisplay" Text="Координаты: " Margin="10"/>
            <TextBlock Name="ErrorDisplay" Text="Ошибок нет" Margin="10" Foreground="Red"/>
        </StackPanel>
    </Grid>
</Window>
