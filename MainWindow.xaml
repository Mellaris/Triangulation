<Window x:Class="TriangulationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriangulationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" >
    <Grid>
        <Canvas Name="MainCanvas" Background="White" MouseMove="Canvas_MouseMove" MouseLeftButtonUp="Canvas_MouseLeftButtonUp">
            <Ellipse Name="RedPoint" Width="20" Height="20" Fill="Red" Canvas.Left="100" Canvas.Top="100" MouseLeftButtonDown="RedPoint_MouseLeftButtonDown"/>
        </Canvas>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Margin="10">
            <Button Name="AddStationButton" Content="Добавить станцию" Width="150" Height="30" Click="AddStation"/>
            <TextBlock Name="CoordinatesDisplay" Text="Координаты: Красная (0, 0)" Margin="10" />
            <TextBlock Name="SignalStrengthDisplay" Text="Сила сигнала: Н/Д" Margin="10" />
            <TextBlock Name="ErrorDisplay" Text="Ошибка: Нет ошибок" Foreground="Red" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
