<Window x:Class="TriangulationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriangulationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1500">
    <Grid>
        <!-- Разделение окна на две части -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- Верхняя часть для ввода данных -->
            <RowDefinition Height="*" />
            <!-- Нижняя часть для карты -->
        </Grid.RowDefinitions>

        <!-- Верхняя панель управления -->
        <StackPanel Orientation="Vertical" Margin="10" Grid.Row="0">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Координаты станций:" VerticalAlignment="Center" />
                <TextBox x:Name="Station1Coords" Width="80" Margin="5" TextChanged="UpdateVisualization" />
                <TextBox x:Name="Station2Coords" Width="80" Margin="5" TextChanged="UpdateVisualization" />
                <TextBox x:Name="Station3Coords" Width="80" Margin="5" TextChanged="UpdateVisualization" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Расстояния до красной точки:" VerticalAlignment="Center" />
                <TextBox x:Name="Distance1" Width="50" Margin="5" TextChanged="UpdateVisualization" />
                <TextBox x:Name="Distance2" Width="50" Margin="5" TextChanged="UpdateVisualization" />
                <TextBox x:Name="Distance3" Width="50" Margin="5" TextChanged="UpdateVisualization" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Радиусы действия станций:" VerticalAlignment="Center" />
                <TextBox x:Name="Radius1" Width="50" Margin="5" TextChanged="UpdateVisualization" />
                <TextBox x:Name="Radius2" Width="50" Margin="5" TextChanged="UpdateVisualization" />
                <TextBox x:Name="Radius3" Width="50" Margin="5" TextChanged="UpdateVisualization" />
            </StackPanel>
            <TextBlock x:Name="ResultText" Margin="5" Foreground="Red" />
        </StackPanel>

        <!-- Нижняя часть с картой -->
        <Canvas x:Name="MapCanvas" Background="White" Width="1000" Grid.Row="1">
            <!-- Элементы карты будут добавлены программно -->
        </Canvas>
    </Grid>
</Window>
