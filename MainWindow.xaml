<Window x:Class="TriangulationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriangulationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" >
    <Grid>
        <!-- Верхнее меню -->
        <Menu VerticalAlignment="Top" Height="30">
            <MenuItem x:Name="Tower1Menu" Header="Вышка 1" />
            <MenuItem x:Name="Tower2Menu" Header="Вышка 2" />
            <MenuItem x:Name="Tower3Menu" Header="Вышка 3" />
            <MenuItem x:Name="CoordinatesMenu" Header="Координаты объекта: Не определено" />
        </Menu>

        <!-- Поле карты -->
        <Canvas Background="LightGray" Margin="10,40,10,10">
            <!-- Черные точки (вышки) -->
            <Ellipse x:Name="Tower1" Fill="Black" Width="20" Height="20" Canvas.Left="150" Canvas.Top="200" />
            <Ellipse x:Name="Tower2" Fill="Black" Width="20" Height="20" Canvas.Left="350" Canvas.Top="300" />
            <Ellipse x:Name="Tower3" Fill="Black" Width="20" Height="20" Canvas.Left="250" Canvas.Top="100" />

            <!-- Радиусы -->
            <Ellipse x:Name="Radius1" Stroke="Black" StrokeDashArray="4" StrokeThickness="1" />
            <Ellipse x:Name="Radius2" Stroke="Black" StrokeDashArray="4" StrokeThickness="1" />
            <Ellipse x:Name="Radius3" Stroke="Black" StrokeDashArray="4" StrokeThickness="1" />

            <!-- Красная точка -->
            <Ellipse x:Name="ObjectPoint" Fill="Red" Width="15" Height="15" Canvas.Left="250" Canvas.Top="200" />
        </Canvas>

        <!-- Поля ввода для радиусов -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10" Background="White">
            <TextBox x:Name="Radius1Input" Width="100" Margin="5" Text="100" />
            <TextBox x:Name="Radius2Input" Width="100" Margin="5" Text="100" />
            <TextBox x:Name="Radius3Input" Width="100" Margin="5" Text="100" />
        </StackPanel>
    </Grid>
</Window>
